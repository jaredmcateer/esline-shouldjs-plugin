{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["node"],
    "declaration": true
  },
  "include": ["**/*.ts"],
  "exclude": ["**/*.test.ts", "dist"]
}
